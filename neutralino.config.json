{
  "applicationId": "js.neutralino.ngapost2md_gui",
  "version": "1.0.3.1",
  "description": "NGA 帖子存档助手 - 离线保存与阅读工具",
  "author": "小河",
  "copyright": "Copyright © 2026 小河",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true,
    "globalLogLevel": "INFO"
  },
  "modes": {
    "window": {
      "title": "NGA 帖子存档助手",
      "width": 1024,
      "height": 768,
      "minWidth": 800,
      "minHeight": 600,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "enableInspector": false,
      "borderless": false,
      "maximize": true,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": false
    }
  },
  "cli": {
    "binaryName": "ngapost2md-gui",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "4.15.0",
    "clientVersion": "3.12.0"
  }
}